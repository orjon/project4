{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "forOf": true,
      "jsx": true,
      "es6": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "global-require": 0,
    "no-console": 0,
    "max-len": 0,
    "no-param-reassign": ["error", { "props": false }],
    "space-before-function-paren": 0,
    "space-before-blocks": 0,
    "no-else-return": 0
  },
  "overrides": [
    {
      "files": ["tests/**/*spec.js"],
      "rules": {
        "no-global-assign": 0
      }
    }
  ],
  "plugins": [
    "react",
    "jsx-a11y",
    "babel"
  ],
  "env": {
    "browser": true,
    "jest": true,
    "jasmine": true,
    "node": true
  }
}
